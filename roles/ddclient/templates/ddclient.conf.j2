{% if name.server is defined %}
server={{ name.server }}
{% endif -%}
{% if name.ssl is defined %}
ssl={{ name.ssl }}
{% endif -%}
{% if name.login is defined %}
login={{ name.login }}
{% endif -%}
{% if name.password is defined %}
password={{ name.password }}
{% endif -%}
{% if name.zone is defined %}
zone={{ name.zone }}
{% endif -%}
